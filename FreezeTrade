--// Services
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local userInput = game:GetService("UserInputService")

--// GUI
local TradeGUI = Instance.new("ScreenGui")
TradeGUI.Name = "XtrfFreezeTradeGUI"
TradeGUI.ResetOnSpawn = false
TradeGUI.IgnoreGuiInset = true
TradeGUI.Parent = playerGui

--// Main Frame
local MainFrame = Instance.new("Frame")
MainFrame.Name = "XtrfMain"
MainFrame.Size = UDim2.new(0, 260, 0, 330)
MainFrame.Position = UDim2.new(0.5, -130, 0.5, -165)
MainFrame.BackgroundColor3 = Color3.fromRGB(40, 0, 60)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Parent = TradeGUI
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 12)

-- Drag Support
local dragging, dragStart, startPos
local function updateDrag(input)
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end
MainFrame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
    end
end)
MainFrame.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        updateDrag(input)
    end
end)
userInput.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = false
    end
end)

--// Top Bar
local TopBar = Instance.new("Frame")
TopBar.Size = UDim2.new(1, 0, 0, 32)
TopBar.BackgroundColor3 = Color3.fromRGB(70, 0, 100)
TopBar.BorderSizePixel = 0
TopBar.Parent = MainFrame

local TitleLabel = Instance.new("TextLabel")
TitleLabel.Size = UDim2.new(1, -32, 1, 0)
TitleLabel.Position = UDim2.new(0, 0, 0, 0)
TitleLabel.BackgroundTransparency = 1
TitleLabel.Text = "Xtrf Freeze Trade"
TitleLabel.Font = Enum.Font.GothamBold
TitleLabel.TextSize = 15
TitleLabel.TextColor3 = Color3.fromRGB(255, 200, 255)
TitleLabel.TextXAlignment = Enum.TextXAlignment.Center
TitleLabel.Parent = TopBar

local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0, 32, 0, 32)
CloseButton.Position = UDim2.new(1, -32, 0, 0)
CloseButton.Text = "X"
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextSize = 16
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.BackgroundColor3 = Color3.fromRGB(150, 0, 120)
CloseButton.BorderSizePixel = 0
Instance.new("UICorner", CloseButton).CornerRadius = UDim.new(0, 8)
CloseButton.Parent = TopBar
CloseButton.MouseButton1Click:Connect(function()
    TradeGUI:Destroy()
end)

--// Content
local Content = Instance.new("Frame")
Content.Size = UDim2.new(1, 0, 1, -32)
Content.Position = UDim2.new(0, 0, 0, 32)
Content.BackgroundTransparency = 1
Content.Parent = MainFrame

local function createButton(text, color, posY)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.85, 0, 0, 34)
    btn.Position = UDim2.new(0.5, -95, 0, posY)
    btn.Text = text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.BackgroundColor3 = color
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 10)
    btn.Parent = Content
    return btn
end

local FreezeBtn = createButton("FREEZE TRADE", Color3.fromRGB(180, 60, 220), 60)
local ForceBtn = createButton("FORCE TRADE PETS", Color3.fromRGB(130, 0, 200), 110)
local AcceptBtn = createButton("AUTO ACCEPT", Color3.fromRGB(90, 0, 160), 160)

-- Notification
local function notify(txt)
    pcall(function()
        game.StarterGui:SetCore("SendNotification", {
            Title = "Xtrf Freeze Trade",
            Text = txt,
            Duration = 2
        })
    end)
end

FreezeBtn.MouseButton1Click:Connect(function() notify("Trade frozen!") end)
ForceBtn.MouseButton1Click:Connect(function() notify("Force trade triggered!") end)
AcceptBtn.MouseButton1Click:Connect(function() notify("Auto accept triggered!") end)

--// Credit
local Credit = Instance.new("TextLabel")
Credit.Text = "Made by XtrfScripts"
Credit.Font = Enum.Font.GothamBold
Credit.TextSize = 13
Credit.TextColor3 = Color3.fromRGB(200, 150, 255)
Credit.BackgroundTransparency = 1
Credit.Size = UDim2.new(1, 0, 0, 20)
Credit.Position = UDim2.new(0, 0, 1, -22)
Credit.TextXAlignment = Enum.TextXAlignment.Center
Credit.Name = "Xtrf"
Credit.Parent = MainFrame

--// Security Check
task.spawn(function()
    while task.wait(2) do
        if not MainFrame:FindFirstChild("Xtrf") then
            player:Kick("Xtrf protection triggered.")
        end
    end
end)
