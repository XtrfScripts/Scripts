 u.InputChanged:Connect(function(i) if d and dragInput==i then local delta=i.Position - sP; f.Position=UDim2.new(fP.X.Scale, fP.X.Offset + delta.X, fP.Y.Scale, fP.Y.Offset + delta.Y) end end)
end
